{
  "openapi": "3.0.0",
  "info": {
    "title": "API Ecommerce CoderHouse",
    "description": "Una simple API de backend",
    "version": "0.1.9"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Testing Server"
    }
  ],
  "paths": {
    "/singup": {
      "post": {
        "summary": "Permite a los usuarios registrarse en la app",
        "tags": [
          "Sesion"
        ],
        "description": "se ingresa mail y contrase単a",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "New User Data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Singup successful"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string",
                          "example": "60bd5be8de7e1a1ed7f7bd6a"
                        },
                        "email": {
                          "type": "string",
                          "example": "pirulito@gmail.com"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Permite a los usuarios loguearse a la aplicacion",
        "tags": [
          "Sesion"
        ],
        "description": "Se envia email y contrase単a y se devuelve un token para acceder a las rutas segurizadas",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Producto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjp7Il9pZCI6IjYwYmNmMTE4"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/productos": {
      "get": {
        "summary": "Devuelve una lista de Productos.",
        "tags": [
          "Productos"
        ],
        "description": "Optional extended description in CommonMark or HTML.",
        "responses": {
          "200": {
            "description": "A JSON array of user names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "mail del usuario",
            "example": "pepe@gmail.com"
          },
          "password": {
            "type": "string",
            "description": "contrase単a del usuario.",
            "example": "Bokita123"
          }
        }
      },
      "Producto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "mail del usuario",
            "example": "pepe@gmail.com"
          },
          "password": {
            "type": "string",
            "description": "contrase単a del usuario.",
            "example": "Bokita123"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}