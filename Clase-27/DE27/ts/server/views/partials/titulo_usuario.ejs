<div class="row" id="row_titulo_login">
  <div class="card text-white bg-success mb-3">
    <div class="row">
      <div class="col-md-8">
        <div class="card-body">
          <h1 class="card-title">Bienvenido <%= nombreUsuario %></h1>
          <% if(emailUsuario !== undefined){ %>
          <h5 class="card-text">
            Email: <%= emailUsuario %>
          </h5>
          <a href="/logout" class="btn btn-warning mt-4">Cerrar Sesión</a>
          <% } %>
        </div>
      </div>
      <% if(fotoUsuario !== undefined){ %>
      <div class="col-md-4 text-end" style="padding-right: 0;">
        <img src=<%= fotoUsuario %>>
      </div>
      <% } else { %>
      <div class="col-md-4 text-center mt-4" style="padding-right: 0;">
        <a href="/logout" class="btn btn-warning">Cerrar Sesión</a>
      </div>
      <% } %>
    </div>
  </div>
</div>