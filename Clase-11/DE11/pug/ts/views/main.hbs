<br>
<h2 class="text-center fw-bolder">Vista de Productos</h2>
<br>
{{#if listExists}}
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th class="text-center" scope="col">Nombre</th>
                <th class="text-center" scope="col">Precio</th>
                <th class="text-center" scope="col">Imagen</th>

            </tr>
        </thead>
        <tbody>
            {{#each suggestedChamps}}
            <tr>
                <td class="text-center">{{this.title}}</td>
                <td class="text-center">$ {{this.price}}</td>
                <td><img src={{this.thumbnail}} alt="..." class="img-fluid rounded mx-auto d-block" style="max-width: 50px; max-heigth: 50px"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="d-grid gap-2 col-6 mx-auto">
        <button class="btn btn-success" onclick="location.href = '/api/agregar_producto';">Ir a agregar producto</button>
    </div>
    {{else}}
    <div class="alert alert-warning" role="alert">
        <h5 class="text-center">
            No se encontraron productos
        </h5>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto">
        <button class="btn btn-success" onclick="location.href = '/api/agregar_producto';">Ir a agregar producto</button>
    </div>
{{/if}}